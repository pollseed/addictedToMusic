<h1>最新の記事チェック</h1>
<h2><%= @crawl_hatena.title %></h2>
<hr>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>title</th>
      </tr>
    </thead>
    <% count = 1 %>
    <% @entry_list.each do |entry|  %>
      <% unless entry.inner_html.empty? %>
        <tr>
          <td><%= count %></td>
          <td><%= entry.inner_html %></td>
          <% count += 1 %>
        </tr>
        <% end %>
      <% end %>
  </table>

<hr>

<h2><%= @crawl_qiita.title %></h2>
<div>
  <hr>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>title</th>
      </tr>
    </thead>
    <% disp = 1 %>
    <% @row.each do |r| %>
      <% unless r.inner_html.empty? %>
        <tr>
          <% if r.inner_html.match(/alt="(.+?)"/) != nil %>
            <td colspan="2"><b>
              <%= r.inner_html.match(/alt="(.+?)"/)[1].gsub(/¥"/, '') %>
            </b></td>
          <% else %>
            <td><%= disp %></td>
            <td><%= r.inner_html %></td>
            <% disp += 1 %>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </table>
  <hr>
</div>
